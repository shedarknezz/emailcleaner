import argparse 

if __name__ == "__main__":
    parser=argparse.ArgumentParser()
    parser.add_argument("source-file", action="store_true", help="source file for operation chain")
    parser.add_argument("--output-base-name","-o",action="store_true", help="intermediate and final output files will use this as unique portion of file name")
    parser.add_argument("--extract-emails","-x",action="store_true", help="eXtract emails form file")

    
    args=parser.parse_args()
    
    print(args.source-file)
    print(args.output-base-name)
    print(args.extract-emails)
    